<div class="author">
<% @authors.each do |author| %>
	<div class="info">

	<ul>
		<li><%= image_tag(author.image, :class => 'thumbnail')%></li>
		<li><%= link_to(author.name, author) %></li>
		<li>Nationality: <%= author.nationality %></li>
		<li>Date of Birth: <%= author.dob.strftime('%A %B %d %Y') %></li>
		<li>Period: <%= author.period %></li>
	</ul>
	</div>
<%end%>
</div>