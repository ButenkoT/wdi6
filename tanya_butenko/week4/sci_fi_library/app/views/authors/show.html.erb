<div class="author">
	<div class='show'>
		<h2><%= @author.name %></h2>
		<%= image_tag @author.image, :class => 'thumbnail'%>
	</div>

	<div class="edit_delete">
		<%= link_to('Edit', edit_author_path(@author)) %>
		<%= link_to 'Delete', @author, :method => :delete , :data => {:confirm => 'Are you sure?'}%>
	</div>
	
	<div class='book_nav'>
		<h3>BOOKS</h3>
		<% @author.books.each do |book| %>
			<%= link_to book.title, book %><br>
		<%end%>
	</div>
</div>